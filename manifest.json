{
    "name": "Color picker",
    "description": "A color picker extension",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "activeTab",
        "scripting" 
    ],

    "action": {
        "default_popup": "popup.html"
    },

    "icons" : {
       "16" : "Images/32x32.png",
       "32" : "Images/32x32.png",
       "48" : "Images/32x32.png"
    }

}
